use TimerIO, Timer

public module Timer {
  in buttonA : Bool,
     buttonB : Bool,
     buttonC : Bool,
     pulse1s : Bool
  out mode : Int,
      hour : Int,
      min  : Int,
      sec  : Int

  newnode m, d =
    TimerCore <- ButtonPressed(buttonA,buttonB,buttonC), pulse1s

  output node mode = case m of Up -> 0; Down -> 1;

  output node hour = case d of Display(h, _, _) -> h;
  output node min = case d of Display(_, m, _) -> m;
  output node sec = case d of Display(_, _, s) -> s;
}
