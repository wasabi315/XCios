use TimerIO, Timer

public module Timer {
  in buttonA : Bool,
     buttonB : Bool,
     buttonC : Bool,
     pulse1s : Bool
  out mode : Int,
      hour : Int,
      min  : Int,
      sec  : Int

  node button = ButtonPressed(buttonA,buttonB,buttonC)

  new core = TimerCore <- button, pulse1s

  out node mode = case core.mode of Up -> 0; Down -> 1;

  out node hour = case core.display of Display(h, _, _) -> h;
  out node min = case core.display of Display(_, m, _) -> m;
  out node sec = case core.display of Display(_, _, s) -> s;
}
